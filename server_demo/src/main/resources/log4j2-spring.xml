<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="off" monitorInterval="30">
    <properties>
        <property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} |-%-5level [%thread] %c [%L] -| %msg%n</property>
        <property name="LOGDIR">/user/local/app</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${PATTERN}"/>
        </Console>
        <RollingFile name="SocFile" fileName="${LOGDIR}/server_demo.log"
                     filePattern="${LOGDIR}/server_demo-%i.log" append="true">
            <PatternLayout pattern="${PATTERN}"/>
            <DefaultRolloverStrategy max="10"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <logger name="com.apache.ibatis" level="TRACE"/>
        <logger name="java.sql.Connection" level="DEBUG"/>
        <logger name="java.sql.Statement" level="DEBUG"/>
        <logger name="java.sql.PreparedStatement" level="DEBUG"/>

        <Logger name="com.runner99.serverDemo" level="INFO" />

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="SocFile" />
        </Root>
    </Loggers>
</Configuration>
